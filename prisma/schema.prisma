generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int     @id @default(autoincrement())
  first_name  String  @db.Text
  last_name   String  @db.Text
  email       String  @db.Text
  password    String  @db.Text
  description String? @db.Text
}

model despensa {
  id              Int    @id @default(autoincrement())
  nombre_alimento String @db.Text
  cantidad        Int
  unidad_medida   String @db.Text
  tipo_alimento   String @db.Text
  user_id         Int
}

model ingredientes {
  id            Int    @id @default(autoincrement())
  nombre        String @db.Text
  categoria     String @db.Text
  unidad_medida String @db.Text
}

model recetas {
  id            Int    @id @default(autoincrement())
  nombre        String @db.Text
  descripcion   String @db.Text
  ingredientes  String @db.Text
  instrucciones String @db.Text
}

model destacados {
  id                 Int    @id @default(autoincrement())
  nombre             String @db.Text
  descripcion        String @db.Text
  ingredientes       String @db.Text
  instrucciones      String @db.Text
  tiempo_preparacion String @db.Text
}

model recetas_favoritas {
  id                 Int    @id @default(autoincrement())
  nombre             String @db.Text
  descripcion        String @db.Text
  ingredientes       String @db.Text
  instrucciones      String @db.Text
  tiempo_preparacion String @db.Text
  userID             Int
}

model recetas_ingredientes {
  id             Int    @id @default(autoincrement())
  receta_id      Int
  ingrediente_id Int
  cantidad       Int
  ingredientes   String @db.Text
  recetas        String @db.Text
}

model recomendados {
  id                 Int    @id @default(autoincrement())
  nombre             String @db.Text
  descripcion        String @db.Text
  ingredientes       String @db.Text
  instrucciones      String @db.Text
  tiempo_preparacion String @db.Text
}

model shop_list {
  id              Int    @id @default(autoincrement())
  nombre_alimento String @db.Text
  cantidad        String @db.Text
  unidad_medida   String @db.Text
  tipo_alimento   String @db.Text
  user_id         Int
}
